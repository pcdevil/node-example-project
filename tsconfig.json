{
	"compilerOptions": {
		"declaration": true,
		"esModuleInterop": true,
		"lib": [
			"ES2020"
		],
		"module": "CommonJS",
		"moduleResolution": "Node",
		"noUnusedParameters": true,
		"outDir": "dist",
		"rootDir": "src",
		"sourceMap": true,
		"strict": true,
		"target": "ES2020"
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"dist",
		"node_modules",
		".tmp"
	]
}
